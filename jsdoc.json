{
  "tags": {
    "allowUnknownTags": true
  },
  "source": {
    "include": ["./layouts","./assets/js"],
    "includePattern": ".+\\.(mjs|js|jsx?)$",
    "excludePattern": "(node_modules|public|docs|sass)"
  },
  "recurseDepth": 10,
  "sourceType": "module",
  "plugins": ["plugins/markdown"], 
  "templates": {
    "cleverLinks": true,
    "monospaceLinks": false
  },
 "opts": {
    "recurse": true,
    "readme": "./readme/readme.md",
    "destination": "./content/nl/docs/",
    "tutorials":"./tutorials",
    "template": "node_modules/docdash"   
  },
 "docdash": {
    "static": true,
    "sort": true,
    "search": true,
    "collapse": true,
    "typedefs": true,
    "removeQuotes": "none",
    "useLongnameInNav": true,
    "scripts": [],
    "menu":{
      "Github repo": {
        "href":"https://github.com/natasha-tuinman/cbtv",
        "target":"_blank",
        "class":"menu-item",
        "id":"repository"
      }
    }
  }
}